{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/*.module.css",
      "options": {
        "parser": "css",
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.{tsx,jsx}",
      "options": {
        "parser": "typescript",
        "printWidth": 100
      }
    }
  ]
}
